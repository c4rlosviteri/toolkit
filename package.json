{
  "name": "@verndale/toolkit",
  "description": "Front end build system.",
  "license": "MIT",
  "version": "5.0.0",
  "author": {
    "name": "Verndale",
    "email": "hello@verndale.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/verndale/toolkit.git"
  },
  "scripts": {
    "version": "git add .",
    "postversion": "git push origin master --tags",
    "check-deps": "check-dependencies --install",
    "js-lint": "eslint --fix --color --debug --ignore-path .eslintignore ./src/js/**/*.* ./src/stories/**/*.*",
    "start": "yarn check-deps && cross-env NODE_ENV=development gulp",
    "build": "yarn js-lint && cross-env NODE_ENV=production gulp && webpack -p --env.production --progress && yarn build-storybook",
    "storybook": "start-storybook -p 6006 -s src/static/",
    "build-storybook": "build-storybook -o ./tools/component-library/ -s src/static/ --no-dll",
    "create-page": "node ./.scaffold/index page",
    "create-module": "node ./.scaffold/index module",
    "create-js": "node ./.scaffold/index js",
    "create-react": "node ./.scaffold/index react"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@verndale/color-palette": "0.1.0",
    "@verndale/core": "1.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.13.14",
