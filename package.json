    "browser-sync": "2.26.14",
    "chalk": "4.1.0",
    "check-dependencies": "1.1.0",
    "core-js": "3.10.0",
    "critical": "2.0.1",
    "cross-env": "7.0.3",
    "css-loader": "5.2.0",
